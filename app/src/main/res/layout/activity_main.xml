<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.z.roomshop.activity.MainActivity">

    <com.z.roomshop.utils.NoScrollViewPager
        android:id="@+id/viewpager_main"
        android:layout_above="@+id/group_main_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.z.roomshop.utils.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/group_main_nav"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navigation_height"
        >
        <RadioButton
            android:id="@+id/rbtn_main_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/main_bottom_home_button_selector"
            android:text="首页"
            android:textColor="@drawable/main_bottom_home_text_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rbtn_main_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/main_bottom_cart_button_selector"
            android:text="购物车"
            android:textColor="@drawable/main_bottom_cart_text_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rbtn_main_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/main_bottom_mine_button_selector"
            android:text="我的"
            android:textColor="@drawable/main_bottom_mine_text_selector"
            android:button="@null"/>
    </RadioGroup>
</RelativeLayout>
